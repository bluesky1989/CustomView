<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line_space"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#FFFFFF"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="10dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="52dp"
            android:background="@mipmap/goback_icon"
            android:visibility="visible"
            />

        <LinearLayout
            android:id="@+id/ll_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginRight="24dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/shape_bg_search_edit"
            android:paddingLeft="28dp"
            >

            <ImageView
                android:id="@+id/iv_search_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@mipmap/search_icon"
                android:layout_gravity="center_vertical"
                />

            <EditText
                android:id="@+id/search_et_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:hint="输入搜索内容"
                android:textCursorDrawable="@drawable/shape_bg_cursor"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="14sp"
                android:textColorHint="#99000000"
                android:textColor="#000000"
                android:background="@null"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="8dp"
                />

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="取消"
                android:textSize="14sp"
                android:textColor="#647D96"
                android:visibility="visible"
                />
        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/view_line_bg"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33647D96"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="4dp"
        android:visibility="gone"
        />

</LinearLayout>
